# Database MySQL (XAMPP)
DATABASE_URL="mysql://root:@localhost:3306/tcc_interclasse"

# Next.js Authentication
NEXTAUTH_SECRET="change_this_to_a_secure_random_string"
NEXTAUTH_URL="http://localhost:3000"

# App Settings
NODE_ENV="development"
APP_NAME="ICM - Interclass Manager"
APP_URL="http://localhost:3000"

# MySQL Database Settings (caso precise separadamente)
DB_HOST="127.0.0.1"
DB_PORT="3306"
DB_DATABASE="tcc_interclasse"
DB_USERNAME="root"
DB_PASSWORD=""

# JWT Settings
JWT_SECRET="change_this_to_another_secure_random_string"
JWT_EXPIRES_IN="24h"

# File Upload (se for usar)
MAX_FILE_SIZE="10mb"
UPLOAD_DIR="public/uploads"

# =================================================================
# INSTRUÇÕES DE CONFIGURAÇÃO:
# =================================================================
# 1. Copie este arquivo para .env
# 2. Altere os valores "change_this_to_..." por strings aleatórias
# 3. Configure sua senha do MySQL (se tiver)
# 4. Crie o banco 'tcc_interclasse' no phpMyAdmin
# 5. Execute: npx prisma db push
# =================================================================